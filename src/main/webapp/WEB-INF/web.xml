<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EmployeAddServlet</servlet-name>
        <servlet-class>ch.conceptforge.challengeemploye.EmployeAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeListServlet</servlet-name>
        <servlet-class>ch.conceptforge.challengeemploye.EmployeListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeDeleteServlet</servlet-name>
        <servlet-class>ch.conceptforge.challengeemploye.EmployeDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeUpdateServlet</servlet-name>
        <servlet-class>ch.conceptforge.challengeemploye.EmployeUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeAddServlet</servlet-name>
        <url-pattern>/EmployeAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeListServlet</servlet-name>
        <url-pattern>/EmployeListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeDeleteServlet</servlet-name>
        <url-pattern>/EmployeDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeUpdateServlet</servlet-name>
        <url-pattern>/EmployeUpdateServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
